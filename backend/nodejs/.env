# Application Mode
PUBLIC_MODE=true  # Set to false when you want to enable authentication later
NODE_ENV='development'  # development/production

# MongoDB Configuration
MONGO_URI='mongodb://localhost:27017/Upholic'
MONGO_DB_NAME='Upholic'

# Server Configuration
PORT=8000
CLIENT_URL='http://localhost:5173'  # Your frontend URL

# Rate Limiting (for public API protection)
API_RATE_LIMIT_WINDOW=15  # minutes
API_RATE_LIMIT_MAX=100  # requests per window

# Optional for public data seeding
SEED_SAMPLE_DATA=true  # Set to false in production